<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="570.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AdministratorController">
    <children>
        <TabPane prefHeight="570.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Users administration">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="Events administration">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="Entries administration">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="User table">
                    <content>
                        <TableView fx:id="tbl_users" layoutX="14.0" layoutY="14.0" prefHeight="500.0" prefWidth="800.0">
                            <columns>
                                <TableColumn fx:id="col_id_user" prefWidth="47.0" text="ID" />
                                <TableColumn fx:id="col_name_user" prefWidth="113.0" text="NAME" />
                                <TableColumn fx:id="col_surname_user" prefWidth="100.0" text="SURNAME" />
                                <TableColumn fx:id="col_login_user" prefWidth="100.0" text="LOGIN" />
                                <TableColumn fx:id="col_password_user" prefWidth="116.0" text="PASSWORD" />
                                <TableColumn fx:id="col_email_user" prefWidth="125.0" text="E-MAIL" />
                                <TableColumn fx:id="col_date_user" prefWidth="199.0" text="REGISTRATION DATE" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab text="Event table">
                    <content>
                        <TableView layoutY="-3.0" prefHeight="425.0" prefWidth="800.0">
                            <columns>
                                <TableColumn fx:id="col_id_event" prefWidth="55.0" text="ID" />
                                <TableColumn fx:id="col_name_event" prefWidth="151.0" text="NAME" />
                                <TableColumn fx:id="col_agenda_event" prefWidth="453.0" text="AGENDA" />
                                <TableColumn fx:id="col_date_event" minWidth="0.0" prefWidth="141.0" text="EVENT'S DATE" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab text="Entries table">
               <content>
                  <TableView prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn prefWidth="70.0" text="ID" />
                      <TableColumn prefWidth="110.0" text="EVENT NAME" />
                        <TableColumn prefWidth="120.0" text="NAME" />
                        <TableColumn prefWidth="120.0" text="SURNAME" />
                        <TableColumn prefWidth="125.0" text="PARTICIPATION" />
                        <TableColumn prefWidth="125.0" text="FOOD" />
                        <TableColumn prefWidth="130.0" text="ENTRY STATUS" />
                    </columns>
                  </TableView>
               </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
